.row
  .col-md-2
    -#.hidden_fields
      #ticket
        .form-group
          = label_tag 'ferry_name', 'Ferry:', class: 'form-control-label'
          = text_field_tag 'ferry_name', '', class: 'form-control', readOnly: true, style: 'margin-left:47px;'
        .form-group
          = label_tag 'direction', 'Direction:', class: 'form-control-label'
          = text_field_tag 'direction', '', class: 'form-control', readOnly: true, style: 'margin-left:20px;'
        .form-group
          = label_tag 'date_val', 'Date:', class: 'form-control-label'
          = text_field_tag 'date_val', '', class: 'form-control', readOnly: true
        .form-group
          = label_tag 'time_val', 'Time:', class: 'form-control-label'
          = text_field_tag 'time_val', '', class: 'form-control', readOnly: true, style: 'margin-left:47px;'
        .form-group{style: 'margin-bottom: 0;'}
          = label_tag 'places', 'Places:', class: 'form-control-label places'
          #places
        %br
        #pay
          .form-group
            = label_tag 'pay', 'Pay:', class: 'pay_label'
            .pay_cost
              0
        %button{class: 'btn btn-info'}
          Confirm
  .col-md-10
    #form
      #date.ll-skin-melon
      #ferries

.modal.fade.bs-example-modal-lg{'aria-labelledby' => 'myLargeModalLabel', :role => 'dialog', :tabindex => '-1'}
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        %button.close{'aria-label' => 'Close', 'data-dismiss' => 'modal', :type => 'button'}
          %span{'aria-hidden' => "true"} Ã—
        %h4#myModalLabel.modal-title#sheep_name
      .modal-body
        #sheep
        = hidden_field_tag 'timetable_id', ''
        #placeshidden
      .modal-footer
        .pull-left
          %button.btn.btn-default{'data-dismiss' => 'modal', :type => 'button'} Close
        .hidden_fields
          Total:
          .pay_cost
            0
          $
          %button.btn.btn-primary{:type => 'button', onClick: 'confirm_pay()'} Pay